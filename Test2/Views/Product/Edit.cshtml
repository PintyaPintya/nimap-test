@model Product

@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit a Product</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="ProductName" class="control-label">Product Name</label>
        <input asp-for="ProductName" type="text" class="form-control" required>
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Category</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))" class="form-control"></select>
    </div>

    <br>
    <button type="submit" class="btn btn-primary">Update</button>
</form>


<br>

<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>