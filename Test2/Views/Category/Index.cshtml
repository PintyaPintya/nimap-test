@model List<Category>

@{
    ViewData["Title"] = "Categories";
}

<a href="@Url.Action("Create")" class="btn btn-primary">Create Category</a>


<table class="table">
    <thead>
        <tr>
            <th>Category Id</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    <tbody>
        @foreach (var category in Model)
            {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a href="@Url.Action("Edit", new {id = category.CategoryId})" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", new {id = category.CategoryId})" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
            }
    </tbody>
    </thead>
</table>

<div>
    @if(ViewBag.CurrentPage > 1)
    {
        <a href="@Url.Action("Index", new {page = ViewBag.CurrentPage - 1})" class="btn btn-primary">Previous</a>
    }

    <span>Page @ViewBag.CurrentPage of @ViewBag.TotalPages</span>

    @if(ViewBag.CurrentPage < ViewBag.TotalPages)
    {
        <a href="@Url.Action("Index", new {page = ViewBag.CurrentPage + 1})" class="btn btn-primary">Next</a>
    }
</div>
